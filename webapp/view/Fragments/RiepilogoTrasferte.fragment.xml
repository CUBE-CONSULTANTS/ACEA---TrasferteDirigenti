<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:ce="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">

    <FlexBox direction="Column">
        <core:Fragment fragmentName="trasfertedirigenti.view.Fragments.HeaderRiepilogoTrasferte" type="XML" />
        <HBox direction="Row" width="100%" justifyContent="End">
            <SegmentedButton width="200px" selectedKey="{modelloAppoggio>/buttonRiepilogoTrasferte}">
                <items>
                    <SegmentedButtonItem icon="sap-icon://table-view" key="table"/>
                    <SegmentedButtonItem icon="sap-icon://calendar" key="calendar" />

                </items>
            </SegmentedButton>
        </HBox>
        <FlexBox visible="{=${modelloAppoggio>/buttonRiepilogoTrasferte} === 'table' ? true : false}">
            <core:Fragment fragmentName="trasfertedirigenti.view.Fragments.TableRiepilogo" type="XML" />
        </FlexBox>
        <FlexBox direction="Column" visible="{=${modelloAppoggio>/buttonRiepilogoTrasferte} === 'table' ? false : true }">
            <core:Fragment fragmentName="trasfertedirigenti.view.Fragments.SinglePlanningCalendar" type="XML"/>
        </FlexBox>
    </FlexBox>
</core:FragmentDefinition>