<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:ce="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">
    <Table items="{modello>/table}">

        <columns>
            <Column width="12em">
                <Text text="Tipo Trasferta" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Descr. tipo trasferta" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
                <Text text="Inizio" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
                <Text text="Fine" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
                <Text text="Ora inizio" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">
                <Text text="Ora fine" />
            </Column>
            <Column minScreenWidth="Desktop" demandPopin="true">

            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text text="{modello>type_trasferta}" />
                    <Text text="{modello>tipo_trasferta}" />
                    <Text text="{modello>data_inizio}" />
                    <Text text="{modello>data_fine}" />
                    <Text text="{modello>ora_inizio}" />
                    <Text text="{modello>ora_fine}" />
                    <Button text="" icon="sap-icon://edit" type="Emphasized" tooltip="Elabora" press=".onChange"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</core:FragmentDefinition>