        <u:Calendar id="calendar" startDateChange=".onChangeDateCalendar" showCurrentDateButton="true" nonWorkingDays="0,6" disabledDates="{path: '/disabled'}" months="2" showWeekNumbers="false" singleSelection="true" select="handleCalendarSelect">
