<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:ce="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">

    <fb:FilterBar class="sapUiSmallMarginBottom" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" showClearOnFB="true" showFilterConfiguration="false">
        <fb:filterGroupItems>
            <fb:FilterGroupItem name="TipoTrasferta" label="Tipo Trasferta" groupName="Group1" visibleInFilterBar="true">
                <fb:control>
                    <Select forceSelection="false" selectedKey="{modelloAppoggio>/filtroTrasferta}" class="sapUiSmallMarginBottom">
                        <core:Item text="T2" key="T2" />
                        <core:Item text="T4" key="T4" />
                    </Select>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem name="start" label="Inizio" groupName="Group1" visibleInFilterBar="true">
                <fb:control>
                    <DatePicker value="{modelloAppoggio>/filtroStart}" editable="{=${modelloAppoggio>/buttonRiepilogoTrasferte} !== 'table' ? false : true }" showCurrentDateButton="true" valueFormat="dd/MM/yyyy" displayFormat="dd/MM/yyyy" placeholder="Inizio Validità" class="sapUiSmallMarginBottom" />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem name="end" label="Fine" groupName="Group1" visibleInFilterBar="true">
                <fb:control>
                    <DatePicker value="{modelloAppoggio>/filtroEnd}" editable="{=${modelloAppoggio>/buttonRiepilogoTrasferte} !== 'table' ? false : true }" showCurrentDateButton="true" valueFormat="dd/MM/yyyy" displayFormat="dd/MM/yyyy" placeholder="Fine Validità" class="sapUiSmallMarginBottom" />
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>

</core:FragmentDefinition>